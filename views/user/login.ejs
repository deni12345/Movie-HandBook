<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/login.css">
</head>

<body>
    <div class="login-page">
        <div class="form">
            <form id="register-form" class="register-form" method="post" action="/user/signup">
                <input type="text" placeholder="name" name="name" />
                <input type="password" placeholder="password" name="password" />
                <input type="text" placeholder="email address" name="email" />
                <button type="submit" form="register-form">create</button>
                <%- include('../partials/error_alert') %>
                    <p class="message">Already registered? <a href="#">Sign In</a></p>
            </form>
            <form id="login-form" class="login-form" method="post" action="/user/login">
                <input type="text" placeholder="username" name="name" />
                <input type="password" placeholder="password" name="password" />
                <button type="submit" form="login-form">login</button>
                <%- include('../partials/error_alert') %>
                    <p class="message">Not registered? <a href="#">Create an account</a></p>
            </form>
            <% if(locals.formActive){ %>
                <script>
                    document.querySelector(`#<%=formActive%>`).classList.add('form-appear')
                </script>
                <% } %>
        </div>
    </div>
    <script>
        document.querySelectorAll('.message a').forEach(Element => {
            Element.addEventListener('click', () => {
                document.querySelector('.register-form').classList.toggle('form-appear')
                document.querySelector('.login-form').classList.toggle('form-appear')
            })
        })
    </script>
</body>

</html>
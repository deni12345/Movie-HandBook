<link rel="stylesheet" href="/movie.css">
<div id="container" class="shape-container">
    <div style="width: 100%; height: 400px; background-repeat: no-repeat; background-size:100%; position: relative; ;display:block ;   
        background-image: linear-gradient(rgba(0,0,0,0) 0%,rgba(0,0,0, 0) 50%, rgba(0,0,0,0.7) 100%), url('<%= movie.coverImgPath%>')">
        <img src="<%= movie.posterImgPath%>" style="float: left; margin-left: 50px; margin-top: 15%;">
        <div class="movie-title-group">
            <h1 class="movie-title">
                <%= movie.title %>
            </h1>
            <h1>
                <%= movie.publishDate.toISOString().split('T')[0] %>
            </h1>
        </div>
        <div>
            <a href="/movie/<%= movie._id %>/edit" class="btn">Edit</a>
            <%- include('../partials/delete_btn',{url:`/movie/${movie._id}?_method=DELETE`}) %>
        </div>
    </div>
    <div style="clear: both;">
    </div>
    <div class="movie-des">
        <section>
            <h1>
                STUDIO
            </h1>
            <p>
                <%= studio.name %>
            </p>
        </section>
        <section>
            <h1>
                DESCRIPTION
            </h1>
            <p>
                <%= movie.description %>
            </p>
        </section>
    </div>
</div>